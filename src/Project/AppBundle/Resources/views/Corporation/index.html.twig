{% extends "ProjectAppBundle::layout.html.twig" %}

{% block content %}
    <div class="bloc-top">
        <a class="btn btn-second" href="{{ path('corporation_new') }}">Ajouter une entreprise</a>
    </div>

    <div class="panel-group">
        {% if entities is empty %}
            <div class="panel-item">
                <div class="panel-content">
                    Aucune entreprise n'est actuellement disponible.
                </div>
            </div>
        {% else %}
            {% for corporation in entities %}
                <div class="panel-item">
                    <div class="panel-content">
                        <div class="panel-header">
                            <h3 class="pull-left">{{ corporation.name }}</h3>
                        </div>
                        <div class="panel-content">
                            Téléphone : {{ corporation.phone }} <br/>
                            E-mail : {{ corporation.email }}
                            <div class="pull-right">
                                <a class="btn btn-default btn-small" href="{{ path('corporation_show', { 'id': corporation.id }) }}">Détails</a>
                                <a class="btn btn-default btn-small" href="{{ path('corporation_edit', { 'id': corporation.id }) }}">Modifier</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% endif %}
    </div>
{% endblock %}
