{% extends "ProjectAppBundle::layout.html.twig" %}

{% block content %}

    <div class="panel-group">
        <div class="panel-item">
            <div class="panel-header">
                <h1>Nouvelle archive</h1>
            </div>
            <div class="panel-content">

                <div class="panel-form">

                    {{ form_start(form) }}
                    {# Errors #}
                    <div class="form-item">
                        {{ form_errors(form)}}
                    </div>

                    <div class="form-item">
                        {{ form_row(form.name) }}
                    </div>
                    <div class="form-item">
                        {{ form_row(form.year) }}
                    </div>

                    {# Buttons #}
                    <div class="form-item last">
                        {{ form_row(form.submit) }}
                    </div>
                    {{ form_end(form) }}
                </div>

            </div>
        </div>
    </div>
    <a href="{{ path('archive') }}" class="btn btn-default">Annuler</a>

{% endblock %}
