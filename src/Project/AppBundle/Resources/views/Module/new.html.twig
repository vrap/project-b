{% extends "ProjectAppBundle::layout.html.twig" %}

{% block content %}

	<div class="panel-group">
        <div class="panel-item">
            <div class="panel-header">
            	<h1>Cr√©er un module</h1>
            </div>
            <div class="panel-content">
                <div class="panel-form">
                    {{ form_start(form) }}
                        {# Errors #}
                        <div class="form-item">
                            {{ form_errors(form)}}
                        </div>
                        {# Inputs #}
                        <div class="form-item">
                            {{ form_widget(form.name) }}
                        </div>
                         {# Buttons #}
                         <div class="form-item">
                            {{ form_row(form.submit) }}
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    
    <a href="{{ path('module') }}" class="btn btn-default">Annuler</a>

{% endblock %}
