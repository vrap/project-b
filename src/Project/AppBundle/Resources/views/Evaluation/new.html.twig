{% extends "ProjectAppBundle::layout.html.twig" %}

{% block content %}

	<div class="panel-group">
        <div class="panel-item">
            <div class="panel-header">
            	<h1>Créer une évaluation</h1>
            </div>
            <div class="panel-content">
                <div class="panel-form">
                    {{ form_start(form) }}
                        {# Errors #}
                        <div class="form-item">
                            {{ form_errors(form)}}
                        </div>
                        {# Inputs #}
                        <div class="form-item">
                            {{ form_row(form.description) }}
                        </div>
                        <div class="form-item">
                            {{ form_row(form.module) }}
                        </div>
                        <div class="form-item">
                            {{ form_row(form.max) }}
                        </div>
                        {# Buttons #}
                        <div class="form-item">
                            {{ form_widget(form.criterions_add) }}
                            {{ form_widget(form.submit) }}
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    
    <div class="bloc-bottom">
        <a href="{{ path('evaluation') }}" class="btn btn-default">Annuler</a>
    </div>
    

{% endblock %}
