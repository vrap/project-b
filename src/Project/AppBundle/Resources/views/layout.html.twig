<!DOCTYPE html>
<html>
    {% block head %}
        <!-- <link rel="icon" sizes="16x16" href="{{ asset('favicon.ico') }}" /> -->
        {% stylesheets 'bundles/appbundle/css/styles.css' filter='cssrewrite' %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
         {% stylesheets 'bundles/appbundle/css/normalize.css' filter='cssrewrite' %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}

        <link href='http://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
        <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400,300' rel='stylesheet' type='text/css'>

    {% endblock %}
    <body>

        <div class="wrapper">
            <nav>
                <ul>
                    <li><a href="#"><i class="flaticon-home flaticon-left"></i> Home</a></li>
                    <li><a class="active" href="#">Agenda</a></li>
                    <li><a href="#">Notes</a></li>
                    <li><a href="#">Absences</a></li>
                    <li><a href="#">Feedbacks</a></li>
                </ul>
            </nav>    
            <div class="main">
            <div class="sidebar">
                <ul class="list-inline">
                    <li>Profile</li>
                    <li>
                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                            {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                            <a class="btn btn-primary" href="{{ path('fos_user_security_logout') }}">
                                {{ 'Déconnection'|trans({}, 'FOSUserBundle') }}
                            </a>
                        {% else %}
                            <a href="{{ path('fos_user_security_login') }}">{{ 'Déconnection'|trans({}, 'FOSUserBundle') }}</a>
                        {% endif %}
                    </li>
                </ul>
            </div>
            <div class="content">

                {% block fos_user_content %}
                {% endblock fos_user_content %}
                
                {% block main %}
                {% endblock main %}

            </div>
            </div>

        </div>


        <div>
            
        </div>

        {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
                <div class="flash-{{ type }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

    </body>
</html>

