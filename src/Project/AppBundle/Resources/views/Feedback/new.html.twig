{% extends "ProjectAppBundle::layout.html.twig" %}

{% block content %}
	
	<div class="panel-group">
        <div class="panel-item">
            <div class="panel-header">
            	<h1>Commenter un cours</h1>
            </div>
            <div class="panel-content">
                <div class="panel-form">
                    {{ form_start(form) }}
                        {# Errors #}
                        <div class="form-item">
                            {{ form_errors(form)}}
                        </div>
                        {# Inputs #}
                        <div class="form-item">
                            {{ form_row(form.module) }}
                        </div>
                        <div class="form-item">
                            <div class="block">
                                {{ form_label(form.comment) }}
                            </div>
                            {{ form_widget(form.comment) }}
                        </div>
                         {# Buttons #}
                         <div class="form-item">
                            {{ form_row(form.submit) }}
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    <a href="{{ path('feedback') }}" class="btn btn-default">Annuler</a>

{% endblock %}

