{% extends "ProjectAppBundle::layout.html.twig" %}

{% block content %}

    <div class="panel-group">
        <div class="panel-item">
            <div class="panel-header">
                <h1>Votre commentaire</h1>
            </div>
            <div class="panel-content">
                <div class="panel-form">
                    <div class="form-item">
                        <label for="created">Fait le</label>
                        <span id="created">{{ entity.created|date('d/m/Y Ã  H:i') }}</span>
                    </div>
                    <div class="form-item">
                        <label for="module">Module</label>
                        <span id="module">{{ entity.module.name }}</span>
                    </div>
                    <div class="form-item">
                        <label for="comment">Commentaire</label>
                        <span id="comment">{{ entity.comment }}</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% if is_granted('ROLE_STUDENT') %}
        <a class="btn btn-default btn-small" href="{{ path('feedback_edit', {'id' : entity.id}) }}">Modifier</a>
        <br/>
        {{ form(delete_form) }}
        <br/>
    {% endif %}

    <a href="{{ path('feedback') }}" class="btn btn-default">Annuler</a>
{% endblock %}